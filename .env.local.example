# ==================================
# 開発環境設定（コピーして .env.local を作成）
# ==================================

# NextAuth設定（必須）
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here  # openssl rand -base64 32 で生成

# AI API設定（必須）
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key-here

# 使用可能なモデル
OPENAI_MODEL=gpt-4o-mini

# Google Apps Script URL (お問い合わせフォーム用)
NEXT_PUBLIC_GAS_URL=https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec

# デバッグ設定
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_USAGE_TRACKING=true
NEXT_PUBLIC_ENABLE_PREMIUM_MODE=true
NEXT_PUBLIC_ENABLE_BROWSER_AUTOMATION=false

# ==================================
# 以下は本番環境用（お客様が見つかってから設定）
# ==================================

# Google OAuth (オプション - 設定しない場合はメール/パスワードのみ)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Firebase設定 (オプション - 将来の本番環境用)
# NEXT_PUBLIC_FIREBASE_API_KEY=
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
# NEXT_PUBLIC_FIREBASE_APP_ID=
# NEXT_PUBLIC_USE_FIRESTORE=true

# Supabase設定 (オプション - 代替案)
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Stripe設定 (オプション - 決済機能用)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# その他の設定
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development