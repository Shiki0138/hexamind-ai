{
  "name": "night-shift-ai",
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  
  "env": {
    "NODE_ENV": "production"
  },
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0"
        }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/monitoring",
      "destination": "/api/monitoring"
    }
  ],
  
  "regions": ["cle1", "iad1", "pdx1", "sfo1"],
  
  "cleanUrls": true,
  "trailingSlash": false
}